<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Lagertha">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2" tools:layout_editor_absoluteY="92dp"
            tools:layout_editor_absoluteX="0dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:text="TextView"
                    android:layout_width="342dp"
                    android:layout_height="195dp" android:id="@+id/bioDeLagertha"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"

                    app:fontFamily="sans-serif-condensed" app:layout_constraintHorizontal_bias="0.489"
                    android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
            <TextView
                    android:text="Amigos favoritos:"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:id="@+id/textView" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/bioDeLagertha"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:textStyle="bold" android:textSize="18sp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageButton"/>
            <ImageView
                    android:layout_width="216dp"
                    android:layout_height="216dp" app:srcCompat="@mipmap/ic_launcher_foreground_lagertha"
                    android:id="@+id/imageView3" android:layout_marginTop="60dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
            <ImageButton
                    android:layout_width="106dp"
                    android:layout_height="106dp" app:srcCompat="@mipmap/ic_launcher_foreground_bjorn"
                    android:id="@+id/imageButton" android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/bioDeLagertha"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"/>
            <ImageButton
                    android:layout_width="106dp"
                    android:layout_height="106dp" app:srcCompat="@mipmap/ic_launcher_foreground_ragnar"
                    android:id="@+id/imageButton2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="50dp" android:layout_marginRight="50dp" android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/bioDeLagertha"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>