<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Athelstan">
    <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <ImageView
                android:layout_width="216dp"
                android:layout_height="216dp" app:srcCompat="@drawable/athelstan"
                android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="342dp"
                    android:layout_height="195dp" android:id="@+id/bioDeAthrlstan"

                    app:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <TextView
                    android:text="Amigos favoritos:"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:id="@+id/textView" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/bioDeAthrlstan"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:textStyle="bold" android:textSize="18sp"
                    android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/imageButton4"/>
        <ImageButton
                android:layout_width="106dp"
                android:layout_height="106dp" app:srcCompat="@drawable/ragnar"
                android:id="@+id/ragnar"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/bioDeAthrlstan"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"/>
        <ImageButton
                android:layout_width="106dp"
                android:layout_height="106dp" app:srcCompat="@drawable/bjorn"
                android:id="@+id/bjorn" android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/bioDeAthrlstan" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp" android:layout_marginRight="50dp"/>

        </android.support.constraint.ConstraintLayout>
</ScrollView>